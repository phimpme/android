<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.phimpme.phimpme.UploadActivity">


    <ImageView
        android:id="@+id/uploadActivityImageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_rowSpan="4"/>

    <EditText

        android:id="@+id/uplpadActivityTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/uploadActivityImageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/uploadActivityImageView"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_rowSpan="3"
        android:editable="true"
        android:ems="10"
        android:inputType="textMultiLine"
        />

    <Button
        android:id="@+id/uploadActivityUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/uplpadActivityTextview"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/uplpadActivityTextview"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:text="System sharing"
        />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sina Weibo"
        android:id="@+id/uplpadActivitySinaWeiboButton"
        android:layout_above="@+id/uploadActivityUploadButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
